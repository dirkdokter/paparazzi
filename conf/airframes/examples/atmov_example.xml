<!-- This is a example for a vehicle with four propellers in plusconfiguration, and a wing. -->
<!-- This is an ATMOV-like configuration. -->
<!-- Copyright (C) 2012, Team ATMOS -->

<airframe name="EXAMPLE_ATMOV">
  <servos min="0" neutral="0" max="0xff">
    <servo name="HB"            no="0" min="1100" neutral="1100" max="2100"/>	<!-- Hover prop bottom -->
    <servo name="HT"            no="1" min="1100" neutral="1100" max="2100"/>	<!-- Hover prop top -->
    <servo name="WL"            no="2" min="1100" neutral="1100" max="2100"/>	<!-- Wingtip prop left -->
    <servo name="WR"            no="3" min="1100" neutral="1100" max="2100"/>	<!-- Wingtip prop right -->
    <servo name="AILEVON_LEFT"  no="4" min="2000" neutral="1500" max="1000"/>
    <servo name="AILEVON_RIGHT" no="6" min="2000" neutral="1500" max="1000"/>
  </servos>

  <commands>
    <axis name="ROLL"     	failsafe_value="0"/>
    <axis name="PITCH"    	failsafe_value="0"/>
    <axis name="YAW"      	failsafe_value="0"/>
    <axis name="THRUST"   	failsafe_value="0"/>

    <axis name="ROLL_AERO"    	failsafe_value="0"/>
    <axis name="PITCH_AERO"	failsafe_value="0"/>
    <axis name="YAW_AERO"	failsafe_value="0"/>
  </commands>

  <section name="AUTOPILOT">
    <define name="MODE_MANUAL" value="AP_MODE_ATTITUDE_DIRECT"/>
    <define name="MODE_AUTO1"  value="AP_MODE_ATTITUDE_Z_HOLD"/>
    <define name="MODE_AUTO2"  value="AP_MODE_NAV"/>

    <define name="AUTOPILOT_KILL_WITHOUT_AHRS"  value="TRUE"/>

    <!-- for kill switch: -->
    <define name="AUTOPILOT_ARMING_KILL_SWITCH"/>
  </section>

  <command_laws>
    <set servo="AILEVON_LEFT"   value="@YAW_AERO+@PITCH_AERO" />
    <set servo="AILEVON_RIGHT"  value="@YAW_AERO-@PITCH_AERO" />
  </command_laws>

  <lift_devices>
    <lift_device type="ROTOR"  	orientation="RadOfDeg(0.)"   />
    <lift_device type="WING"  	orientation="RadOfDeg(-90.)" />
  </lift_devices>

  <section name="AIRCRAFT" prefix="AIRCRAFT_">
    <define name="COMMANDS_YAW_ALWAYS_ENABLED" value="TRUE"/>
  </section>

  <section name="SUPERVISION" prefix="SUPERVISION_">
    <define name="MIN_MOTOR" 		value="1100"/>
    <define name="MAX_MOTOR" 		value="2100"/>
    <define name="TRIM_A" 		value="0"/>
    <define name="TRIM_E" 		value="0"/>
    <define name="TRIM_R" 		value="0"/>
    <define name="NB_MOTOR" 		value="4"/>
    <define name="SCALE" 		value="256"/>
    <define name="STOP_MOTOR"    	value="1000"/> <!-- send 1ms pulses on kill -->

    <!-- Plus configuration, similar to the convention shown in http://paparazzi.enac.fr/wiki/Rotorcraft_Configuration -->
    <!-- Direction of rotation is opposite to that of the convention for engines HB and WL -->
    <!-- Axes are in normal rotorcraft conventions, i.e.: with the props horizontal,
         you can see the horizon in the PFD. -->
    <define name="PITCH_COEF"  	value="{   256, -256,    0,    0  }"/>
    <define name="ROLL_COEF"   	value="{     0,    0,  256, -256  }"/>
    <define name="YAW_COEF"     value="{    -0,    0,   -0,    0  }"/>
    <define name="THRUST_COEF" 	value="{   256,  256,  230,  230  }"/>
  </section>

  <section name="FORCE_ALLOCATION" prefix="FORCE_ALLOCATION_">
    <define name="MAX_CLIMB"   			value="3.0f" />
    <define name="PITCH_OF_VZ" 			value="0.25f"/>
    <define name="THROTTLE_OF_VZ"		value="0.05f"/>
    <define name="PITCH_TRIM"    		value="0.0f" />
    <define name="THROTTLE_OF_XDD"		value="0.0f" />
    <define name="YAWRATE_OF_YDD"   		value="0.8f" />

    <define name="RADIO_TRANSITION_CHANNEL"   	value="RADIO_EXTRA1" />
    <define name="FAILSAVE_TRANSITION_PCT"   	value="100" />
  </section>

  <!-- include magneto neutrals 
  <include href="conf/airframes/ATMOS/calib/imu_lisam_033_atmov4.xml"/>-->


  <section name="IMU" prefix="IMU_">
    <define name="MAG_X_NEUTRAL" value="-152"/>
    <define name="MAG_Y_NEUTRAL" value="-51"/>
    <define name="MAG_Z_NEUTRAL" value="10"/>
    <define name="MAG_X_SENS" value="4.04042714046" integer="16"/>
    <define name="MAG_Y_SENS" value="3.95350991963" integer="16"/>
    <define name="MAG_Z_SENS" value="3.83055079257" integer="16"/>
    <!-- IMU is placed with it's length perpendicular to the wing -->
    <define name="BODY_TO_IMU_PHI"   value="RadOfDeg(   0. )"/>
    <define name="BODY_TO_IMU_THETA" value="RadOfDeg(  90. )"/>
    <define name="BODY_TO_IMU_PSI"   value="RadOfDeg( 180. )"/>
  </section>

 <section name="BAT">
   <!--<define name="MILLIAMP_PER_PERCENT" 	 value="0.86"/>-->
   <define name="CATASTROPHIC_BAT_LEVEL" value="9" 	unit="V"/>
   <define name="MIN_BAT_LEVEL" 	 value="10.2" 	units="V"/>
 </section>

  <section name="STABILIZATION_RATE" prefix="STABILIZATION_RATE_">
    <define name="SP_MAX_P" 		value="10000"/>
    <define name="SP_MAX_Q" 		value="10000"/>
    <define name="SP_MAX_R" 		value="10000"/>

    <define name="GAIN_P" 		value="200"/>
    <define name="GAIN_Q" 		value="200"/>
    <define name="GAIN_R" 		value="200"/>
  </section>

  <section name="STABILIZATION_ATTITUDE" prefix="STABILIZATION_ATTITUDE_">
    <!-- setpoints -->
    <define name="SP_MAX_PHI"     	value="RadOfDeg(45.)"/>
    <define name="SP_MAX_THETA"   	value="RadOfDeg(120.)"/> <!-- for plane mode -->
    <define name="SP_MAX_PSI"     	value="RadOfDeg(45.)"/>
    <define name="SP_MAX_R"       	value="RadOfDeg(90.)"/>
    <define name="SP_MAX_P"       	value="RadOfDeg(90.)"/>
    <define name="DEADBAND_R"     	value="1000"/>
    <define name="DEADBAND_A"     	value="200"/>

    <!-- reference -->
    <define name="REF_OMEGA_R"  	value="RadOfDeg(600)"/>
    <define name="REF_ZETA_R"   	value="0.90"/>
    <define name="REF_MAX_R"    	value="RadOfDeg(400.)"/>
    <define name="REF_MAX_RDOT" 	value="RadOfDeg(8000.)"/>

    <define name="REF_OMEGA_Q"  	value="RadOfDeg(1200)"/>
    <define name="REF_ZETA_Q"   	value="0.90"/>
    <define name="REF_MAX_Q"    	value="RadOfDeg(800.)"/>
    <define name="REF_MAX_QDOT" 	value="RadOfDeg(8000.)"/>

    <define name="REF_OMEGA_P"  	value="RadOfDeg(600)"/>
    <define name="REF_ZETA_P"   	value="0.85"/>
    <define name="REF_MAX_P"    	value="RadOfDeg(220.)"/>
    <define name="REF_MAX_PDOT" 	value="RadOfDeg(1800.)"/>

    <!-- feedback -->
    <define name="PHI_PGAIN"  		value="0"/>
    <define name="PHI_DGAIN"  		value="0"/>
    <define name="PHI_IGAIN"  		value="0"/>
    <define name="PHI_ACTGAIN" 		value="0"/>

    <define name="THETA_PGAIN"  	value="0"/>
    <define name="THETA_DGAIN"  	value="0"/>
    <define name="THETA_IGAIN"  	value="0"/>
    <define name="THETA_ACTGAIN"  	value="0"/>

    <define name="PSI_PGAIN"  		value="0"/>
    <define name="PSI_DGAIN"  		value="0"/>
    <define name="PSI_IGAIN"  		value="0"/>
    <define name="PSI_ACTGAIN" 		value="0"/>

    <!-- feedforward -->
    <define name="PHI_DDGAIN"   	value="100"/>
    <define name="THETA_DDGAIN" 	value="200"/>
    <define name="PSI_DDGAIN"   	value="100"/>
  </section>

  <section name="INS" prefix="INS_">
    <define name="BARO_SENS" value="16" integer="16"/>
  </section>

 <section name="GUIDANCE_V" prefix="GUIDANCE_V_">
   <define name="MIN_ERR_Z"   			value="POS_BFP_OF_REAL(-10.)"/>
   <define name="MAX_ERR_Z"   			value="POS_BFP_OF_REAL( 10.)"/>
   <define name="MIN_ERR_ZD"  			value="SPEED_BFP_OF_REAL(-10.)"/>
   <define name="MAX_ERR_ZD"  			value="SPEED_BFP_OF_REAL( 10.)"/>
   <define name="MAX_SUM_ERR" 			value="2000000"/>
   <define name="HOVER_KP"    			value="80"/>
   <define name="HOVER_KD"    			value="80"/>
   <define name="HOVER_KI"    			value="9"/>
   <!-- 1.5m/s for full stick : BOOZ_SPEED_I_OF_F(1.5) / (MAX_PPRZ/2) -->
   <define name="RC_CLIMB_COEF" 		value ="163"/>
   <!-- BOOZ_SPEED_I_OF_F(1.5) * 20% -->
   <define name="RC_CLIMB_DEAD_BAND"  		value ="160000"/>
   <define name="NOMINAL_HOVER_THROTTLE"        value ="0.40"/>

   <define name="REF_MIN_ZDD"			value="(-0.1*9.81)"/>
   <define name="REF_MAX_ZDD"			value="(0.1*9.81)"/>
   <define name="REF_MIN_ZD"			value="-0.75"/>
   <define name="REF_MAX_ZD"			value="0.4"/>

  </section>

  <section name="AHRS" prefix="AHRS_">
    <define name="PROPAGATE_FREQUENCY" 		value="512"/>
    <define name="CORRECT_FREQUENCY" 	value="512"/>

    <!-- magnetic field for Santa cruz from http://www.ngdc.noaa.gov/geomagmodels/IGRFWMM.jsp -->
    <!--<define name="H_X" value=" 0.47577"/>
    <define name="H_Y" value=" 0.11811"/>
    <define name="H_Z" value=" 0.87161"/>-->
    <!-- magnetic field for Rotterdam -->
    <!--<define name="H_X" value=" 0.39123"/>
    <define name="H_Y" value=" 0.00059"/>
    <define name="H_Z" value=" 0.92025"/>-->
    <!-- magnetic field for Georgia -->
    <define name="H_X" value="0.651996618"/>
    <define name="H_Y" value="0.013482692"/>
    <define name="H_Z" value="0.758101109"/>

  </section>

 <section name="GUIDANCE_H" prefix="GUIDANCE_H_">
   <define name="PGAIN" 		value="25"/>
   <define name="DGAIN" 		value="16"/>
   <define name="IGAIN" 		value="0"/>
   <define name="AGAIN" 		value="0"/>
   <define name="REF_MAX_BANK"      	value="25"/>
   <define name="MAX_BANK"      	value="25"/>
   <define name="REF_MAX_SPEED"      	value="15"/>
 </section>

 <modules main_freq="512">
 </modules>

  <firmware name="rotorcraft">
<!--    <define name="USE_SETPOINTS_WITH_TRANSITIONS" value="TRUE"/>-->
    <define name="ATMOS_RCD" value="TRUE"/>
    <define name="RC_LOST_MODE" value="PPRZ_MODE_AUTO2"/>
    <define name="USE_ADAPT_HOVER" value="TRUE"/>
    <define name="USE_KILL_SWITCH_FOR_MOTOR_ARMING" value="TRUE"/>
<!--   <define name="ADC_CHANNEL_CURRENT" value="ADC_1"/>
   <define name="MilliAmpereOfAdc(adc)" value="((adc)*0.021826172)"/>-->
    <!-- no V_IN on molex connector anymore -->
   <define name="ADC_CHANNEL_VSUPPLY" value="ADC_3"/>
    <define name="VSUPPLY_SCALING" value="0.003491211f"/>
    <!--<define name="GUIDANCE_H_USE_REF" value="TRUE"/>-->
    <define name="USE_SERVOS_7AND8" value="TRUE"/>
    <target name="ap" board="lisa_m_2.0">
      <subsystem name="radio_control" type="ppm"/>
      <subsystem name="actuators"     type="pwm_supervision">
       <configure name="USE_SERVOS_7AND8"    value="TRUE"/>
      </subsystem>
      <subsystem name="telemetry"     type="xbee_api">
<!--      <subsystem name="telemetry"     type="transparent">
        <configure name="MODEM_BAUD"    value="B9600"/>-->
        <configure name="MODEM_PORT"    value="UART2"/>
        <configure name="MODEM_BAUD"    value="B57600"/>
<!--        <configure name="MODEM_PORT"    value="UART2"/> -->
      </subsystem>
      <define name="SERVO_HZ" value="400"/>
      <define name="SERVO_HZ_SECONDARY" value="40"/>
      <define name="RADIO_KILL_SWITCH" value="RADIO_FLAPS"/>
    </target>

    <subsystem name="imu"          type="aspirin_v2.0"/>
    <subsystem name="gps"          type="ublox">
      <configure name="GPS_PORT"                value="UART3"/>
      <configure name="GPS_BAUD"                value="B38400"/>
    </subsystem>

    <!--<define name="FILTER_IC_ACCEL"  value="1"/>-->
    <subsystem name="ahrs"          type="int_cmpl_quat"/>
    <subsystem name="stabilization" type="int_quat"/>
  </firmware>
  <makefile>
    FLASH_MODE=JTAG
    NO_LUFTBOOT=1
  </makefile>
</airframe>
